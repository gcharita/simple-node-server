{
    "name": "simple-node-server",
    "version": "1.0.0",
    "description": "A simple test server",
    "main": "index.js",
    "license": "MIT",
    "private": true,
    "scripts": {
        "start": "node dist/index.js",
        "test": "jest",
        "build": "tsc",
        "build:watch": "tsc --watch",
        "restart": "yarn build; yarn start",
        "postinstall": "yarn build",
        "prepare": "husky install"
    },
    "dependencies": {
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-session": "^1.17.3",
        "node-fetch": "^3.3.2",
        "uuid": "^9.0.0"
    },
    "prettier": {
        "printWidth": 120,
        "semi": false,
        "singleQuote": false,
        "bracketSpacing": true,
        "tabWidth": 4
    },
    "jest": {
        "testURL": "http://localhost",
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(.test)\\.(ts|tsx)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json"
        ]
    },
    "lint-staged": {
        "*.json": [
            "yarn prettier --write"
        ],
        "*.ts": [
            "eslint --fix",
            "yarn prettier --write"
        ],
        "*test.ts": [
            "jest -u"
        ],
        "*.md": [
            "yarn prettier --write"
        ]
    },
    "devDependencies": {
        "@types/express": "^4.17.17",
        "@types/express-session": "^1.17.7",
        "@types/jest": "^29.5.3",
        "@types/node": "^20.4.10",
        "@types/node-fetch": "^2.6.4",
        "@types/uuid": "^9.0.2",
        "@typescript-eslint/eslint-plugin": "^6.3.0",
        "@typescript-eslint/parser": "^6.3.0",
        "eslint": "^8.47.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-prettier": "^5.0.0",
        "husky": "^8.0.3",
        "jest": "^29.6.2",
        "lint-staged": "^13.3.0",
        "prettier": "^3.0.1",
        "ts-jest": "^29.1.1",
        "typescript": "^5.1.6"
    }
}
