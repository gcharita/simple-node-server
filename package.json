{
    "name": "simple-node-server",
    "version": "1.0.0",
    "description": "A simple test server",
    "main": "index.js",
    "license": "MIT",
    "private": true,
    "scripts": {
        "start": "node dist/index.js",
        "test": "jest",
        "build": "tsc",
        "build:watch": "tsc --watch",
        "restart": "yarn build; yarn start",
        "postinstall": "yarn build",
        "precommit": "lint-staged; yarn build;",
        "prepush": "jest"
    },
    "dependencies": {
        "@octokit/rest": "^16.28.7",
        "@types/dotenv": "^6.1.1",
        "@types/express": "^4.17.0",
        "@types/express-session": "^1.15.13",
        "@types/jest": "^24.0.17",
        "@types/node": "^12.7.0",
        "@types/node-fetch": "^2.5.0",
        "@types/pg": "^7.4.14",
        "@types/uuid": "^3.4.5",
        "aws-sdk": "^2.504.0",
        "body-parser": "^1.19.0",
        "dotenv": "^8.0.0",
        "express": "^4.17.1",
        "express-session": "^1.16.2",
        "husky": "^3.0.2",
        "jest": "^24.8.0",
        "lint-staged": "^9.2.1",
        "node-fetch": "^2.6.0",
        "parse-github-url": "^1.0.2",
        "pg": "^7.12.0",
        "prettier": "^1.18.2",
        "ts-jest": "^24.0.2",
        "tslint": "^5.18.0",
        "tslint-config-prettier": "^1.8.0",
        "typescript": "^3.5.3",
        "uuid": "^3.3.2"
    },
    "prettier": {
        "printWidth": 120,
        "semi": false,
        "singleQuote": false,
        "bracketSpacing": true,
        "tabWidth": 4
    },
    "jest": {
        "testURL": "http://localhost",
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(.test)\\.(ts|tsx)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json"
        ]
    },
    "lint-staged": {
        "*.json": [
            "yarn prettier --write",
            "git add"
        ],
        "*.ts": [
            "tslint --fix",
            "yarn prettier --write",
            "git add"
        ],
        "*test.ts": [
            "jest -u"
        ],
        "*.md": [
            "yarn prettier --write",
            "git add"
        ]
    }
}
