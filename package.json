{
    "name": "simple-node-server",
    "version": "1.0.0",
    "description": "A simple test server",
    "main": "index.js",
    "license": "MIT",
    "private": true,
    "scripts": {
        "start": "node dist/index.js",
        "test": "jest",
        "build": "tsc",
        "build:watch": "tsc --watch",
        "restart": "yarn build; yarn start",
        "postinstall": "yarn build",
        "prepare": "husky install"
    },
    "dependencies": {
        "@types/express": "^4.17.13",
        "@types/express-session": "^1.17.4",
        "@types/jest": "^27.0.1",
        "@types/node": "^16.9.1",
        "@types/node-fetch": "^3.0.3",
        "@types/uuid": "^8.3.1",
        "dotenv": "^10.0.0",
        "express": "^4.17.1",
        "express-session": "^1.17.2",
        "jest": "^27.2.0",
        "lint-staged": "^11.1.2",
        "node-fetch": "^3.1.1",
        "prettier": "^2.4.0",
        "ts-jest": "^27.0.5",
        "tslint": "^6.1.2",
        "tslint-config-prettier": "^1.8.0",
        "typescript": "^4.4.3",
        "uuid": "^8.3.2"
    },
    "prettier": {
        "printWidth": 120,
        "semi": false,
        "singleQuote": false,
        "bracketSpacing": true,
        "tabWidth": 4
    },
    "jest": {
        "testURL": "http://localhost",
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(.test)\\.(ts|tsx)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json"
        ]
    },
    "lint-staged": {
        "*.json": [
            "yarn prettier --write"
        ],
        "*.ts": [
            "tslint --fix",
            "yarn prettier --write"
        ],
        "*test.ts": [
            "jest -u"
        ],
        "*.md": [
            "yarn prettier --write"
        ]
    },
    "devDependencies": {
        "husky": "^7.0.2"
    }
}
