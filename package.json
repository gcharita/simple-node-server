{
    "name": "simple-node-server",
    "version": "1.0.0",
    "description": "A simple test server",
    "main": "index.js",
    "license": "MIT",
    "private": true,
    "scripts": {
        "start": "node dist/index.js",
        "test": "jest",
        "build": "tsc",
        "build:watch": "tsc --watch",
        "restart": "yarn build; yarn start",
        "postinstall": "yarn build"
    },
    "dependencies": {
        "@types/dotenv": "^8.2.0",
        "@types/express": "^4.17.6",
        "@types/express-session": "^1.17.0",
        "@types/jest": "^25.2.1",
        "@types/node": "^13.13.4",
        "@types/node-fetch": "^2.5.7",
        "@types/uuid": "^7.0.3",
        "aws-sdk": "^2.668.0",
        "body-parser": "^1.19.0",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "express-session": "^1.17.1",
        "husky": "^4.2.5",
        "jest": "^25.5.4",
        "lint-staged": "^10.2.2",
        "node-fetch": "^2.6.0",
        "prettier": "^2.0.5",
        "ts-jest": "^25.4.0",
        "tslint": "^6.1.2",
        "tslint-config-prettier": "^1.8.0",
        "typescript": "^3.8.3",
        "uuid": "^8.0.0"
    },
    "prettier": {
        "printWidth": 120,
        "semi": false,
        "singleQuote": false,
        "bracketSpacing": true,
        "tabWidth": 4
    },
    "jest": {
        "testURL": "http://localhost",
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(.test)\\.(ts|tsx)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json"
        ]
    },
    "lint-staged": {
        "*.json": [
            "yarn prettier --write",
            "git add"
        ],
        "*.ts": [
            "tslint --fix",
            "yarn prettier --write",
            "git add"
        ],
        "*test.ts": [
            "jest -u"
        ],
        "*.md": [
            "yarn prettier --write",
            "git add"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged; yarn build;",
            "pre-push": "jest"
        }
    }
}
